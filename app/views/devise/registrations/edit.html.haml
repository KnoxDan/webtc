- @page_title = t('accounts.edit.title')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!

  %table.form
    %tr
      %th= f.label :email, t('accounts.user.email')
      %td= f.email_field :email
      %td.help= t('accounts.edit.help.email')

    %tr
      %th= f.label :password, t('accounts.user.password')
      %td= f.password_field :password
      %td.help= t('accounts.edit.help.password')

    %tr
      %th= f.label :password_confirmation, t('accounts.user.password_confirmation')
      %td= f.password_field :password_confirmation
      %td.help= t('accounts.edit.help.password_confirmation')

    %tr
      %th= f.label :current_password, t('accounts.user.current_password')
      %td= f.password_field :current_password
      %td.help= t('accounts.edit.help.current_password')

    %tr
      %th
      %td= f.submit "Update"
      %td

